<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.cardview.widget.CardView
        android:id="@+id/inside_article_card_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="@dimen/cardView_image_radius">
        <ImageView
            android:id="@+id/inside_card_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_greyscale_line"
            />
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/inside_article_card_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/inside_submit_btn">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:id="@+id/inside_price_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Цена"
                style="@style/Inside.Price"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/inside_price_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:backgroundTint="@color/app_greyscale_input"
                app:cardCornerRadius="35dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toTopOf="parent"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/inside_article_minus"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_minus"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        />
                    <TextView
                        android:id="@+id/inside_article_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/counter_spaceBetween"
                        android:text="1"
                        style="@style/Inside.Counter"
                        android:layout_gravity="center_vertical"
                        />
                    <ImageView
                        android:id="@+id/inside_article_plus"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_plus"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="5dp"

                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/inside_article_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Название товара"
                style="@style/Inside.Header"
                android:layout_marginTop="22dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/inside_price_counter"
                />
            <TextView
                android:id="@+id/inside_header_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/Inside.Header2"
                android:text="Описание:"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/inside_article_name"
                />
            <TextView
                android:id="@+id/inside_desciption_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Inside.Description"
                android:text="Компактная лампа, которая имеет большой срок службы и при этом низкую энергозатратность. Обладает отличной цветопередачей. Свет лампы приятен для глаз, не напрягает их. Подходит для всех световых приборов с соответствующим цоколем и допустимой мощностью лампы."
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/inside_header_description"
                />
            <TextView
                android:id="@+id/inside_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Магазин:"
                app:layout_constraintTop_toBottomOf="@id/inside_desciption_text"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                style="@style/Inside.Header2"
                />
            <TextView
                android:id="@+id/inside_shop_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="г. Санкт-Петербург ул. Проспект Вернандского 15Б"
                app:layout_constraintTop_toBottomOf="@id/inside_shop"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                style="@style/Inside.Description"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/inside_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cart_btn_height"
        android:text="Добавить в корзину"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/app_newblack"
        />

</androidx.constraintlayout.widget.ConstraintLayout>